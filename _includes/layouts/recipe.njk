---
layout: layouts/base.njk
section: recipe
---

<article>
  <h1>{{ title }}</h1>

  <hr>

  {%- if date -%}
  <p>
    <small>
      <strong>Start Date:</strong> <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time></a>
    </small>
  </p>
  {%- endif -%}
  {%- if bottle_date -%}
  <p>
    <small>
      <strong>Bottle Condition Date:</strong> <time datetime="{{ bottle_date | machineDate }}">{{ bottle_date | readableDate }}</time></a>
    </small>
  </p>
  {%- endif -%}
  {%- if ready_date -%}
  <p>
    <small>
      <strong>Ready date:</strong> <time datetime="{{ ready_date | machineDate }}">{{ ready_date | readableDate }}</time></a>
    </small>
  </p>
  {%- endif -%}

  <hr>

  {% if tags %}
    <p>
    <strong>Beer Style:</strong>
    {% for tag in tags %}
      {%- if tag != "recipes" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

  <hr>

  {{ layoutContent | safe }}

</article>

<nav>
  <a href="{{ '/' | url }}">← Home</a>
</nav>
